<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
    </style>

    <style name ="NoActionBar" parent ="Theme.AppCompat.NoActionBar">
        <item name = "android:windowActionBar">false</item>
        <item name = "android:windowNoTitle">true</item>
    </style>

    <style name="PrimaryHeaderTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="PrimaryTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="SecondaryHeaderTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="SecondaryTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="LoadingProgressBar" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
